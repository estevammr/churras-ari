<%- model_class = SaleItem -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id_da_venda) %></th>
      <th><%= model_class.human_attribute_name(:id_do_cliente) %></th>
      <th><%= model_class.human_attribute_name(:id_do_produto) %></th>
      <th><%= model_class.human_attribute_name(:quantidade_da_venda) %></th>
      <th><%= model_class.human_attribute_name(:valor_da_venda) %></th>
      <th><%= model_class.human_attribute_name(:criado_em) %></th>
      <th><%=t '.ações', :default => t("helpers.ações") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sale_items.each do |sale_item| %>
      <tr>
        <td><%= link_to sale_item.id, sale_item_path(sale_item) %></td>
        <td><%= sale_item.client_id %></td>
        <td><%= sale_item.product_id %></td>
        <td><%= sale_item.sale_quantity %></td>
        <td><%= sale_item.sale_value %></td>
        <td><%=l sale_item.created_at %></td>
        <td>
        <%= link_to t('.editar', :default => t("helpers.links.editar")),
                      edit_sale_item_path(sale_item), :class => 'btn btn-default btn-xs' %>
        <%= link_to t('.deletar', :default => t("helpers.links.deletar")),
                      sale_item_path(sale_item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.nova_venda', :default => t("helpers.links.nova_venda")),
            new_sale_item_path,
            :class => 'btn btn-primary' %>
