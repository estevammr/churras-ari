<%- model_class = PurchaseItem -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id_da_compra) %></th>
      <th><%= model_class.human_attribute_name(:id_do_produto) %></th>
      <th><%= model_class.human_attribute_name(:quantidade_da_compra) %></th>
      <th><%= model_class.human_attribute_name(:valor_da_compra) %></th>
      <th><%= model_class.human_attribute_name(:criado_em) %></th>
      <th><%=t '.ações', :default => t("helpers.ações") %></th>
    </tr>
  </thead>
  <tbody>
    <% @purchase_items.each do |purchase_item| %>
      <tr>
        <td><%= link_to purchase_item.id, purchase_item_path(purchase_item) %></td>
        <td><%= purchase_item.product_id %></td>
        <td><%= purchase_item.quantity %></td>
        <td><%= purchase_item.value %></td>
        <td><%=l purchase_item.created_at %></td>
        <td>
          <%= link_to t('.editar', :default => t("helpers.links.editar")),
                      edit_purchase_item_path(purchase_item), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.deletar', :default => t("helpers.links.deletar")),
                      purchase_item_path(purchase_item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.nova_compra', :default => t("helpers.links.nova_compra")),
            new_purchase_item_path,
            :class => 'btn btn-primary' %>
