<%- model_class = PurchaseItem -%>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Detalhes da Compra</a>
    </div>
  </div><!-- /.container-fluid -->
</nav>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:id_do_produto) %>:</strong></dt>
  <dd><%= @purchase_item.product_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantidade_da_compra) %>:</strong></dt>
  <dd><%= @purchase_item.quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor_da_compra) %>:</strong></dt>
  <dd><%= @purchase_item.value %></dd>
</dl>

<%= link_to t('.voltar', :default => t("helpers.links.voltar")),
              purchase_items_path, :class => 'btn btn-default'  %>
<%= link_to t('.editar', :default => t("helpers.links.editar")),
              edit_purchase_item_path(@purchase_item), :class => 'btn btn-default' %>
<%= link_to t('.deletar', :default => t("helpers.links.deletar")),
              purchase_item_path(@purchase_item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>