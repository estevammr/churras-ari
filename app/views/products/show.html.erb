<%- model_class = Product -%>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Detalhes do Produto</a>
    </div>
  </div><!-- /.container-fluid -->
</nav>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome_do_produto) %>:</strong></dt>
  <dd><%= @product.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantidade_em_estoque) %>:</strong></dt>
  <dd><%= @product.quantity %></dd>
</dl>

<%= link_to t('.voltar', :default => t("helpers.links.voltar")),
              products_path, :class => 'btn btn-default'  %>
<%= link_to t('.editar', :default => t("helpers.links.editar")),
              edit_product_path(@product), :class => 'btn btn-default' %>
<%= link_to t('.deletar', :default => t("helpers.links.deletar")),
              product_path(@product),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
